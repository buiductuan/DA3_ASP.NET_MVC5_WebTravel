<div id="travel-tours" class="travel-section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                <h3>@theme.Home_Title_P</h3>
                <p>@theme.Home_Description_P</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in listProduct)
            {
                <div class="col-md-4 col-sm-6 travel-tours animate-box fadeInUp animated" data-animate-effect="fadeIn">
                    <div class="travel-overlay"></div>
                    <div class="clearfix">
                        <a href="@menuProduct.Link/@item.MetaTitle-@(item.ID).html" title="@item.Name">
                            <img src="~/images/images/Products/@item.Image" alt="@item.Name" class="img-responsive">
                            <div class="desc">
                                <h3>@(item.Name.Substring(0, 17))</h3>
                                <s class="pull-right price_promotion">@(item.PromotionPrice != null ? String.Format("{0:C}", item.Price) : "" )</s><br />
                                <span class="price">@(item.PromotionPrice != null ? String.Format("{0:C}", item.PromotionPrice) : String.Format("{0:C}", item.Price) )</span>
                                <a href="/booking/@item.MetaTitle-@(item.ID).html" class="btn btn-primary btn-outline">Đặt ngay <i class="icon-arrow-right22"></i></a>
                            </div>
                        </a>
                    </div>
                </div>
            }
            <div class="col-md-12 text-center animate-box">
                <p><a class="btn btn-primary btn-outline btn-lg" href="@(menuProduct.Link).html">Xem thêm <i class="icon-arrow-right22"></i></a></p>
            </div>
        </div>
    </div>
</div>

