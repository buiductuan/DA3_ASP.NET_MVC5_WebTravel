<div id="travel-blog-section" class="travel-section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                <h3>@theme.Home_Title_Blog</h3>
                <p>@theme.Home_Description_Blog</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row row-bottom-padded-md">
            @foreach (var item in listNews)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="travel-blog animate-box">
                        <a href="@menuNews.Link/@item.MetaTitle-@(item.ID).html"><img title="@item.Name" class="img-responsive max-height-image" src="~/images/images/Newsletter/@item.Image" alt="@item.MetaTitle"></a>
                        <div class="blog-text">
                            <div class="prod-title">
                                <h3 title="@item.Name"><a href="/tin-tuc/@item.MetaTitle-@(item.ID).html">@(item.Name.ToString().Substring(0, 50) + " ...")</a></h3>
                                <span class="posted_by">@(Convert.ToDateTime(item.CreatedDate).ToShortDateString())</span>
                                <span class="comment"><a href="">@item.ViewCount<i class="fa fa-eye"></i></a></span>
                                <p>@(item.Description.ToString().Substring(0, 70))</p>
                                <p><a href="/tin-tuc/@item.MetaTitle-@(item.ID).html">Xem thêm ...</a></p>
                            </div>
                            <hr />
                            <div style="font-size:10px;" class="text-muted">
                                <label>Like : @(item.Like)</label>|
                                <label>Love : @item.Love</label>|
                                <label>Enjoy : @item.Enjoy</label>|
                                <label>Glad : @item.Glad</label>|
                                <label>Angry : @item.Angry</label>
                            </div>
                            <hr />
                            <input type="hidden" class="emoij_fb" id="btn_emoij" data-id="@item.ID" value="like" />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-12 text-center animate-box">
            <p><a class="btn btn-primary btn-outline btn-lg" href="(@menuNews.Link).html">Xem thêm<i class="icon-arrow-right22"></i></a></p>
        </div>

    </div>
</div>
