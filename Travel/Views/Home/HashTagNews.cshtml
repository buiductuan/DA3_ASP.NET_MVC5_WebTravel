@model List<Model.EntityFramework.Newsletter>
@{
    var menu = (Model.EntityFramework.Menu)ViewBag.Menu;
    ViewBag.Title = "TravelHappy | "+ViewBag.tagID;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="hash-tags">
        <h3>Tags</h3>
        <label class="label label-primary">@ViewBag.TagID</label>
        @foreach (var item in Model)
        {
            <div class="panel panel-default animate-box">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <img width="250" class="img-responsive center-block" src="~/images/images/Newsletter/@item.Image" />
                        </div>
                        <div class="col-md-10">
                            <h4><a href="@(menu.Link)/@item.MetaTitle-@(item.ID).html" title="@item.Name">@item.Name</a></h4>
                            <i class="fa fa-calendar fa-fw"></i>@(Convert.ToDateTime(item.CreatedDate).ToShortDateString())
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
       
    </div>
</div>