@model Travel.Models.SignInModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Assets/Client/css/bootstrap.css" rel="stylesheet" />
    <!--Font awesome-->
    <link rel="stylesheet" href="https://cdn.rawgit.com/FortAwesome/Font-Awesome/master/css/font-awesome.min.css" />
    <link href="~/Assets/Client/css/buttonSocial.css" rel="stylesheet" />    
    <title>Đăng nhập</title>
   
</head>
<body>
    <div class="container">
        <a href="/">
            <img class="img-responsive center-block" src="~/images/images/icon.png" />
        </a>
        <div class="row" style="margin-top:20px">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                @using (Html.BeginForm("SignIn","Registration",FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <h2>Đăng nhập</h2>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="sicon">
                                    <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3 text-center">
                                        <div class="icon-circle">
                                            <a href="/Registration/LoginFacebook" class="ifacebook" title="Facebook"><i class="fa fa-facebook"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationSummary(false, "", new { @class= "text-danger error_cutom pull-right" })
                        <hr class="colorgraph">
                        <div class="form-group">
                            <label id="error_UserName_SignIn"></label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-lg", @placeholder = "Tên tài khoản" })
                        </div>
                        <div class="form-group">
                            <label id="error_Password_SignIn"></label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", @placeholder = "Mật khẩu" })
                        </div>
                        <span class="button-checkbox clearfix">
                            <a href="" class="btn btn-link pull-right"></a>
                        </span>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Đăng nhập">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="/dang-ky.html" class="btn btn-lg btn-primary btn-block">Đăng ký</a>
                            </div>
                        </div>
                        <br />
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <script src="~/Assets/Client/js/jquery.min.js"></script>
    <script src="~/Assets/Client/js/bootstrap.min.js"></script>
</body>
</html>
