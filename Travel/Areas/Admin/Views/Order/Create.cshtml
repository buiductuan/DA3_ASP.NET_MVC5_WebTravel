@model Model.EntityFramework.Order
@{
    ViewBag.Title = "TravelHappy | Thêm đơn hàng";
    ViewBag.Name = ViewBag.Name_Session;
    ViewBag.ImageUser = ViewBag.ImageUser_Session;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header_h1{
    Thêm mới đơn hàng
}
@section header_a{
    Thêm mới đơn hàng
}
@section jsFooter{

}
<div class="container">
    @using (Html.BeginForm("Create", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Chi tiết đơn hàng</h4>
                        @Html.ValidationSummary(false, "", new { @class = "error_custom" })
                    </div>
                    <div class="panel-body">
                        <label>Chọn sản phẩm</label>
                        @Html.DropDownListFor(model => model.ProductID, null, new { @class = "form-control" })
                        <hr />
                        <div class="row">
                            <div class="col-md-5">
                                <label>Ghi chú</label>
                                @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @placeholder = "Thêm ghi chú cho đơn hàng" })
                            </div>
                            <div class="col-md-7 clearfix">
                                <div class="col-md-6">
                                    <small class="text-muted pull-left">Tạm tính</small><br /><br />
                                    <a href="#" data-toggle="modal" data-target="#modal_Discount">Thêm khuyến mãi</a>
                                </div>
                                <div class="col-md-6">
                                    <label class="pull-right">0đ</label><br /><br />
                                    <label class="pull-right">--</label>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-7 clearfix col-md-offset-5">
                                <h4 class="pull-left">Tổng cộng</h4>
                                <h4 class="pull-right">0đ</h4>
                            </div>
                        </div>
                        <hr />
                        <div class="row clearfix">
                            <div class="col-md-6">
                                <h3><i style="color:#0094ff" class="fa fa-cc-mastercard"></i> Xác nhận thanh toán</h3>
                            </div>
                            <div style="margin-top:10px;" class="col-md-6">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="#" class="btn btn-primary pull-right">Đã thanh toán</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="#" class="btn btn-primary pull-right">Thanh toán sau</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Thêm mới khách hàng</h4>
                    </div>
                    <div class="panel-body">

                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modal_Discount">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Thêm khuyến mãi</h4>
                    </div>
                    <div class="modal-body">
                        <label>Giảm giá cho đơn hàng này</label>
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-addon"><a href="#">đ</a></span>
                            <span class="input-group-addon"><a href="#">%</a></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
