@model List<Model.EntityFramework.SystemNotification>
@{
    ViewBag.Title = "TravelHappy | Cấu hình thông báo";
    ViewBag.Name = ViewBag.Name_Session;
    ViewBag.ImageUser = ViewBag.ImageUser_Session;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header_h1{
    Cấu hình thông báo
}
@section header_a{
    Cấu hình thông báo
}
@section jsFooter{
<script src="~/Assets/Admin/controllers/NotificationController.js"></script>
    }
<div class="container">
    <div class="row">
        <div class="col-md-3">
             <h4>Nội dung email</h4>
            <p class="text-muted">Những email này được gửi tự động tới bạn hoặc khách hàng. Click vào tên mẫu email để chỉnh sửa.</p>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <th>Mẫu</th>
                            <th>Mô tả</th>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="#" data-id="@item.ID" class="btn_update">@item.Pattern</a>
                                    </td>
                                    <td>@item.Content</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal_Notification">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Tiêu đề email</label><input type="text" hidden="hidden" class="getID"/>
                    <input type="text" class="form-control txtEmailTitle" />
                    <br />
                    <textarea cols="10" rows="4" class="form-control email-content"></textarea>
                </div>
            </div>
            <div class="modal-footer clearfix">
                <button type="button" class="btn btn-default pull-left">Xem</button>
                <button type="button" class="btn btn-default pull-left">Gửi mail thử nghiệm</button>
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary pull-right btn_Save">Lưu</button>
            </div>
        </div>
    </div>
</div>
